<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Act4_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Act4_PaintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="畫筆"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_EraserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="橡皮擦"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_UndoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="還原"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_PreviousPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上一頁"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_NextPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一頁"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_RedoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/font_size_small"
            android:visibility="invisible" />

        <Button
            android:id="@+id/Act4_ClearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/font_size_small"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Act4_Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="剩餘時間：10：00"
            android:textSize="@dimen/font_size" />

        <Button
            android:id="@+id/Act4_NextActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="下一步"
            android:textSize="@dimen/font_size_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/activity4_Upframelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Act4_ImageView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/sym_def_app_icon" />

        </FrameLayout>

        <EditText
            android:id="@+id/Act4_editText01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            
        </EditText>

        <FrameLayout
            android:id="@+id/activity4_Downframelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/Act4_ImageView02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/sym_def_app_icon" />

        </FrameLayout>

        <EditText
            android:id="@+id/Act4_editText02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

    </LinearLayout>

</LinearLayout>