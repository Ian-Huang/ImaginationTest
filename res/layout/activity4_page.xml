<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/Act4_UndoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="還原" />

        <Button
            android:id="@+id/Act4_RedoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重畫" />

        <Button
            android:id="@+id/Act4_ClearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除" />

        <Button
            android:id="@+id/Act4_EraserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="橡皮擦" />

        <Button
            android:id="@+id/Act4_PreviousPageButton"
            android:layout_width="45dp"
            android:layout_height="75dp"
            android:text="上一頁" />

        <Button
            android:id="@+id/Act4_NextPageButton"
            android:layout_width="45dp"
            android:layout_height="75dp"
            android:text="下一頁" />
    </LinearLayout>

</LinearLayout>