<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Act4_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Act4_UndoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="還原"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_RedoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重畫"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_ClearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_EraserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="橡皮擦"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_PreviousPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上一頁"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_NextPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一頁"
            android:textSize="@dimen/font_size_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/Act4_LoadFileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讀取"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_SaveFileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="儲存"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act4_StartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開始測驗"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/Act4_ImageView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/sym_def_app_icon" />

        <EditText
            android:id="@+id/Act4_editText01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/Act4_ImageView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/sym_def_app_icon" />

        <EditText
            android:id="@+id/Act4_editText02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

    </LinearLayout>

</LinearLayout>