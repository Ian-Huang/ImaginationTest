<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Act3_TotalView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Act3_LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Act3_2Timer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="4.46"
            android:text="剩餘時間：10：00"
            android:textSize="@dimen/font_size_small" />

        <Button
            android:id="@+id/Act3_2_NextActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="下一步"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Act3_LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/Act3_2_BlackPaintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="黑色"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_GrayPaintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰色"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_EraserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="橡皮擦"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_UndoPaintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="還原"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_RedoPaintButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重畫"
                android:textSize="@dimen/font_size_small"
                android:visibility="invisible" />

            <Button
                android:id="@+id/Act3_2_ClearCanvasButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除"
                android:textSize="@dimen/font_size_small"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/Act3_2_EditChangeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="編輯切換"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_MoveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移動"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_RotateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旋轉"
                android:textSize="@dimen/font_size_small" />

            <Button
                android:id="@+id/Act3_2_DepthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深度"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="標題："
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/Act3_2PictureName_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity3_2_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>